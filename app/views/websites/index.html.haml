%table
  %tbody
  - @websites.each do |website|
    %tr
      %td= website.title
      %td= website.description
      %td
        %a{:href => "= website.before_image.url", :target => "_blank"}= image_tag(website.before_image.thumbnail.url, :class=> "thumbnail inline")
      %td
        %a{:href => "= website.after_image.url", :target => "_blank"}= image_tag(website.after_image.thumbnail.url, :class=> "thumbnail inline")
      %td= link_to 'Show', website
      %td= link_to 'Edit', edit_website_path(website)
      %td= link_to 'Destroy', website, method: :delete, data: {confirm: 'Are you sure?'}
%br
= link_to 'New Website', new_website_path